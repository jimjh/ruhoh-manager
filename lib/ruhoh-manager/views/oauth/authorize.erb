<h2>The application <%= link_to h(oauth.client.display_name), oauth.client.link %>
  is requesting to <%= oauth.scope %> your account.</h2>
<form action="<%= path_to '/oauth/grant'%>" method='post'>
  <button>Grant</button>
  <input type="hidden" name="authorization" value="<%= oauth.authorization %>">
</form>
<form action="<%= path_to '/oauth/deny' %>" method='post'>
  <button>Deny</button>
  <input type="hidden" name="authorization" value="<%= oauth.authorization %>">
</form>
